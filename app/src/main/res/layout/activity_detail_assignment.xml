<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_assignment_name"
        style="@style/TextTitleItem"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/nama_tugas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_assignment_material"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/materi"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/text_view_assignment_name"
        app:layout_constraintTop_toBottomOf="@+id/text_view_assignment_name" />

    <TextView
        android:id="@+id/text_view_assignment_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/deskripsi"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/text_view_assignment_material"
        app:layout_constraintTop_toBottomOf="@+id/text_view_assignment_material" />

    <Button
        android:id="@+id/button_edit_assignment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/edit_assignment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_assignment_desc" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>